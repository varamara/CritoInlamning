@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

<section class="our-services-section">
    <div class="container">
        <div class="service-title">
            <h2 class="h2-2">@Model.Value("ourServicesSectionTitle")</h2>
            <h1>@Model.Value("ourServicesSectionHeading")</h1>
        </div>

        <div class="service-boxes">
            @Html.GetBlockListHtml(Model.OurServices)
        </div>

        <a href="@Model.Value("ourServicesSectionButtonUrl")" class="transparent-button" style="width: 200px; margin-left: 560px; margin-top: 30px;">
            @Model.Value("ourServicesButtonText")<i class="fa-solid fa-arrow-up-right"></i>
        </a>
    </div>
    <img class="element-1-img" src="~/images/background_effects/Element.svg" alt="">
</section>
